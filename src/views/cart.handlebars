<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
<div class="container">
 <div class="container py-5">
    <h1 class="mb-5">Carrito {{cId}}</h1>
    <div class="row">
        <div class="col-lg-8">
            <!-- Cart Items -->
            <div class="card mb-4">
                <div class="card-body">
                  {{#each cart}}
                    <div class="row cart-item">
                        <div class="col-md-3">
                            <img src={{thumbnails.[0]}} alt="Product 1" class="img-fluid rounded">
                        </div>
                        <div class="col-md-5">
                            <h5 class="card-title">{{title}}</h5>
                            <p class="text-muted">{{description}}</p>
                            <p class="text-muted">Precio unitario: ${{price}}</p>
                            <p class="text-muted">Cantidad: {{quantity}}</p>
                        </div>
                        <div class="col-md-2 text-end">
                            <p class="fw-bold">${{subTotal}}</p>
                            <button class="btn btn-sm btn-outline-danger"  onclick="removeFromCart('{{../cId}}', '{{id}}')">
                                    <i class="bi bi-trash"></i>
                                </button>
                        </div>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
            <!-- Continue Shopping Button -->
            <div class="text-start mb-4">
                <a href="/products" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Continuar comprando
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- Cart Summary -->
            <div class="card cart-summary">
                <div class="card-body">
                    <h5 class="card-title mb-4">Detalles:</h5>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong>${{cartTotal}}</strong>
                    </div>
                    <button class="btn btn-primary w-100" onclick="checkout()">Terminar la compra</button>
                </div>
            </div>
        </div>
    </div>
</div>  

</div>

<script src="/js/cart.js"></script>