<div class="container mt-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-5 mb-4">
            <img src={{product.thumbnails.[0]}} alt="Product" class="img-fluid rounded mb-3 product-image" id="mainImage">
        </div>
        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="mb-3">{{product.title}}</h2>
            <p class="text-muted mb-4">{{product.category}}</p>
            <p class="text-muted mb-4">{{product.code}}</p>
            <div class="mb-3">
                <span class="h4 me-2">${{product.price}}MXN</span>
            </div>
            <div class="mb-3">
                <span class="h4 me-2">Available Stock: {{product.stock}}</span>
            </div>
            <p class="mb-4">{{product.description}}</p>
            <button class="btn btn-dark btn-lg mb-3 me-2">
                    <i class="bi bi-cart-plus"></i> Add to Cart
            </button>
        </div>
    </div>
</div>