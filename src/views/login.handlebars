<div class="container">
  <h1>Login</h1>
  <form id="loginForm">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" placeholder="Introduce tu email" name="email">
    <br />
    <label for="password">Contraseña</label>
    <input type="password" class="form-control" id="password" placeholder="Contraseña" name="password">
    <br />
    <button type="submit" class="btn btn-dark">Entrar</button>
  </form>
  <p>¿No estás registrado? <a href="/register">Regístrate aquí</a></p>
  <a href="/api/sessions/github" role="button">
          <button class="btn btn-dark mt-auto align-self-start" >Entrar con GitHub</button>
  </a>
</div>
<script src="/js/login.js"></script>